<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:PruebaFinalExamen.MVVM.Converters"
             x:Class="PruebaFinalExamen.MVVM.Views.PruebaView"
             Title="PruebaView">
    <ContentPage.Resources>
        <converters:ConverterNumero x:Key="numeroConverter" />
    </ContentPage.Resources>
    
    <VerticalStackLayout>
        <Entry Text="{Binding Prueba.Numero}" />
        <Label Text="{Binding Prueba.Numero, Converter={StaticResource numeroConverter}}" />
        <Button Text="Alerta" Command="{Binding ComandoNumeroIntroducido}" />
    </VerticalStackLayout>
</ContentPage>