<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_4_EjemploMVVM.MVVM.Views.FodyView"
             Title="FodyView">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="numero1" Text="{Binding Numero1}" VerticalOptions="Center" HorizontalOptions="Center" />
        <Entry x:Name="numero2" Text="{Binding Numero2}" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label x:Name="resultado" Text="{Binding Resultado}" VerticalOptions="Center" HorizontalOptions="Center" />

        <Button x:Name="calcular" Text="Calcular" Command="{Binding AddCommand}" VerticalOptions="Center" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>