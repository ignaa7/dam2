<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_4_EjemploMVVM.MVVM.Views.CommandView"
             Title="CommandView">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="HOLA" Command="{Binding ClickCommand}" />

        <Entry x:Name="ent" />

        <Button x:Name="Boton" Text="Click Me" Command="{Binding ClickCommand1}" CommandParameter="{Binding Source={x:Reference Boton}, Path=Text}" />

        <Button x:Name="Boton1" Text="Click Me" Command="{Binding ClickCommand1}" CommandParameter="4" />

        <Button x:Name="Boton2" Text="Click Me" Command="{Binding ClickCommand1}" CommandParameter="{Binding Source={x:Reference ent}, Path=Text}" />
    </VerticalStackLayout>
</ContentPage>