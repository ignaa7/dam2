<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Layouts.FlexLayoutDemo"
             Title="FlexLayoutDemo">
    <FlexLayout Wrap="Wrap" Direction="Row" AlignItems="Center" JustifyContent="SpaceBetween">
        <Button BackgroundColor="Red" WidthRequest="50" HeightRequest="50"></Button>
        <Button BackgroundColor="Blue" WidthRequest="50" HeightRequest="50"></Button>
        <Button BackgroundColor="Green" WidthRequest="50" HeightRequest="50"></Button>
        <Button BackgroundColor="Yellow" WidthRequest="50" HeightRequest="50"></Button>
        <Button BackgroundColor="Pink" WidthRequest="50" HeightRequest="50"></Button>
        <Button BackgroundColor="Purple" WidthRequest="50" HeightRequest="50"></Button>
    </FlexLayout>
</ContentPage>