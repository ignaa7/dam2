<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio10ControlGastos.MVVM.Views.AgregarTransaccionView"
             x:Name="ThisPage"
             Title="AgregarTransaccionView">
    <AbsoluteLayout>
        <Frame AbsoluteLayout.LayoutBounds="0, 0, 1, 0.3" AbsoluteLayout.LayoutFlags="All">
                <HorizontalStackLayout>
                    <Label Text="Añadir transacción" FontSize="Title" />
                </HorizontalStackLayout>
        </Frame>
        <Frame AbsoluteLayout.LayoutBounds="0.5, 0.2, 0.95, 0.2" AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout>
                <Label Text="Nombre de la transacción" />
                <Entry />
                <Label Text="Cantidad" />
                <Entry />
                <Label Text="Fecha de la transacción" />
                <DatePicker />
                <CheckBox />
                <Label Text="¿Es un ingreso?"/>
                <Button Text="Guardar"
                        Command="{Binding AddCommand}"
                        CommandParameter="{x:Reference ThisPage}" />
                <Button Text="Cancelar"
                        Command="{Binding VolverCommand}"
                        CommandParameter="{x:Reference ThisPage}" />
            </VerticalStackLayout>
        </Frame>
    </AbsoluteLayout>
</ContentPage>