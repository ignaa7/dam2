<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio8AdministradorDeTareas.MVVM.Views.AgregarTareaView"
             Shell.BackgroundColor="Purple">
    <VerticalStackLayout>
        <Entry Placeholder="Introduce Nueva Tarea" />

        <CollectionView ItemsSource="{Binding Categorias}"  ItemTemplate="{StaticResource CategoriaRadioStyle}" SelectionMode="Single">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
            Span="2" />
            </CollectionView.ItemsLayout>

        </CollectionView>
    </VerticalStackLayout>
</ContentView>
