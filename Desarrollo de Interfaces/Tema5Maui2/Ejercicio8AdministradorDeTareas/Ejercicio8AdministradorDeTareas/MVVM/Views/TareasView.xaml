<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio8AdministradorDeTareas.MVVM.Views.TareasView"
             Title="TareasView"
             Shell.BackgroundColor="Purple">

    <ScrollView>
        <VerticalStackLayout
        Padding="10"
        Spacing="10">
            <Label Text="Mis tareas" Style="{StaticResource titulo}" />
            <Label Text="CATEGORÍAS" Style="{StaticResource subtitulo}" />

            <CollectionView ItemsSource="{Binding Categorias}"  ItemTemplate="{StaticResource ProductTemplates}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="50" Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>
            </CollectionView>
            

            <Label Text="TAREAS PENDIENTES" Style="{StaticResource subtitulo}" />

            <CollectionView ItemsSource="{Binding Tareas}"  ItemTemplate="{StaticResource TareaStyle}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="50" Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>