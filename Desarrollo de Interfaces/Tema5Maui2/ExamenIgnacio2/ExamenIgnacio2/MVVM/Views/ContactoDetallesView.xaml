<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenIgnacio2.MVVM.Views.ContactoDetallesView"
             Title="Detalles">
    <ScrollView>
        <VerticalStackLayout>
            <Image Source="dotnet_bot.png" HeightRequest="200" />
            <Label Text="{Binding ContactoActual.Nombre}" />
            <Label Text="{Binding ContactoActual.Categoria}" />
            <Label />
            <Label Text="{Binding ContactoActual.Telefono}" />
            <Label Text="{Binding ContactoActual.Correo}" />
            <Label />

            <HorizontalStackLayout Spacing="20">
                <HorizontalStackLayout>
                    <Label Text="Favorito" />
                    <CheckBox IsChecked="{Binding ContactoActual.Favorito}" />
                </HorizontalStackLayout>
                <Button Text="Mensaje" Command="{Binding EnviarMensaje}" />
                <Button Text="Llamar" Command="{Binding Llamar}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>