<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="ThisPage"
             Title="Nuevo Contacto"
             x:Class="ExamenIgnacio2.MVVM.Views.AgregarContactoView">
    <VerticalStackLayout>
        <Entry Text="{Binding Nombre}" Placeholder="Nombre" />
        <Entry Text="{Binding Foto}" Placeholder="Foto" />
        <Entry Text="{Binding Correo}" Placeholder="Correo" />
        <Entry Text="{Binding Categoria}" Placeholder="Categoría" />
        <Entry Text="{Binding Telefono}" Placeholder="Teléfono" />
        <CheckBox IsChecked="{Binding Favorito}" />

        <Button Text="Guardar" Command="{Binding AgregarContacto}" CommandParameter="{x:Reference ThisPage}" />
    </VerticalStackLayout>
</ContentPage>
