<odoo>
    <data>
      <record id="person_tree_view" model="ir.ui.view">
        <field name="name">task.tree</field>
        <field name="model">tasks.person</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name" />
            <field name="age" />
            <field name="assigned_tasks_count" />
            <field name="tasks_ids" widget="many2many_tags" />
          </tree>
        </field>
      </record>
    </data>
  </odoo>