<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#505050"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="396dp"
        android:layout_height="291dp"
        android:layout_gravity="center"
        android:layout_marginBottom="120dp"
        android:columnCount="5"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPantalla">

        <Button
            android:id="@+id/btnDEL"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txtDEL" />

        <Button
            android:id="@+id/btnMultiplicacion"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txtMultiplicacion" />

        <Button
            android:id="@+id/btnResta"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txtResta" />

        <Button
            android:id="@+id/btnSuma"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txtSuma" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txt7" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txt8" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txt9" />

        <Button
            android:id="@+id/btnAC"
            android:layout_width="67dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txtAC" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txt4" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txt5" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txt6" />

        <Button
            android:id="@+id/btnDivision"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txtDivision" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txt1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txt2" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txt3" />

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="60dp"
            android:layout_height="132dp"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:layout_column="4"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txtIgual" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="132dp"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txt0" />

        <Button
            android:id="@+id/btnPunto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bordeboton"
            android:text="@string/txtPunto" />

    </GridLayout>

    <TextView
        android:id="@+id/txtPantalla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/marco"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>